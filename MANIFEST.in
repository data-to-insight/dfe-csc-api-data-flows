# Pkg metadata and docs for PyPI
include LICENSE
include README.md
include MANIFEST.in
include pyproject.toml
include api_pipeline/README.md
include api_pipeline/.env.example

# Keep bytecode and junk out of the sdist
global-exclude *.py[cod] __pycache__/* .DS_Store *.spec
global-exclude .ipynb_checkpoints/* *.nbconvert.ipynb

# Prune build outputs and CI artefacts
prune build
prune dist
prune release_bundle
prune site
prune csc_api_pipeline.egg-info
prune .github
prune docs
prune notebooks

# Dev-only helpers inside the package
prune api_pipeline/scripts

# Include notebooks and PowerShell scripts shipped inside the wheel
graft api_pipeline/notebooks
graft api_pipeline/pshell

# SQL helpers at repo root, include .sql, drop dev bucket
recursive-include sql_json_query *.sql
prune sql_json_query/dev

# Root-level dev files not needed in sdist
exclude mkdocs.yml
exclude requirements.txt
exclude pytest.ini
exclude clean.sh
exclude setup.sh
exclude release.sh
exclude sccm.yml
exclude sccm_graph_static.svg
